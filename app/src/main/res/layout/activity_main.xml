<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">
    <Button
            android:text="@string/click"
            android:layout_width="118dp"
            android:layout_height="68dp" android:id="@+id/button"
            android:layout_marginEnd="147dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="146dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="147dp" android:textSize="20sp" android:fontFamily="sans-serif"
            android:textAlignment="center"/>
    <TextView
            android:text="@string/initialTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/initialTextView"
            android:visibility="visible"
            android:textSize="36sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/black"
            android:fontFamily="casual" android:typeface="normal" android:textStyle="bold" android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/quoteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/quoteTextView"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/black"
            android:fontFamily="casual" android:typeface="normal" android:textAllCaps="false"
            android:textStyle="bold|italic" tools:visibility="visible" android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <TextView
            android:text="@string/authorTextView"
            android:layout_width="131dp"
            android:layout_height="30dp" android:id="@+id/authorTextView"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="casual" android:typeface="normal" android:textAllCaps="false"
            android:textStyle="bold|italic" tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="265dp" android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/quoteTextView" app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="25dp" app:layout_constraintStart_toEndOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>